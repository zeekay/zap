  "bugs": {
    "url": "https://github.com/zap-proto/zap/issues"
  },
  "dependencies": {
    "capnp-ts": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0"
